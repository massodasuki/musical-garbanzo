{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Debug NestJS App (ts-node)",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/src/main.ts", // ✅ main entry point
      "runtimeExecutable": "ts-node",               // ✅ use ts-node properly
      "args": [],
      "cwd": "${workspaceFolder}",
      "env": {
        "TS_NODE_PROJECT": "tsconfig.json"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
